<h1>Sign up!</h1>

<%= form_for(@user) do |f| %>
  
  <%= render 'layouts/flash' %>
  <%= render 'layouts/errors' %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation%>
  <br>
  <%= f.submit "Sign up" %>

<% end %>