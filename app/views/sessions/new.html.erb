<h1>Sign In</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <%= render 'layouts/flash' %>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br />
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign In" %>
<% end %>

<%= link_to "Back to homepage", root_url %>