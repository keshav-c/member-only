<h1>All posts</h1>

<br>
<% if logged_in? %>
<%= link_to "Create new post", new_post_path %>
/
<%= link_to "log out", logout_path, method: :delete %>
<% end %>

<br>
<ul>
  <% @posts.each do |p| %>
    <li>
      <% if !logged_in? %>
        <p><strong><span class="anon-user">Anonymous:</span></strong> <%= p.content %></p>
      <% else %>
        <p><strong><span class="known-user"><%= p.user.name %>:</span></strong> <%= p.content %></p>
      <% end%>
    </li>
  <% end %>
</ul>